<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.ol.olcx.Activities.WalletActivity">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadmore="false"
        app:srlEnablePureScrollMode="true"
        android:background="@color/walletBlue"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhile"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/walletBlue"
                    >

                    <TextView
                        android:id="@+id/balance_available_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="6dp"
                        android:text="可用余额"
                        />
                    <TextView
                        android:id="@+id/balance_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="6dp"
                        android:textSize="50sp"
                        android:text="￥20000"
                        android:layout_below="@id/balance_available_mark"
                        />
                    <TextView
                        android:id="@+id/balance_notavailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="6dp"

                        android:text="冻结金额：2000"
                        android:layout_below="@id/balance_money"
                        />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/wallet_item1"
                    style="@style/WALLET_ITEM"
                    >

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/wallet_rc"

                        />

                    <TextView
                        style="@style/WALLET_TXT"
                        android:text="充值"
                        />

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/into"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black9"
                    />

                <LinearLayout
                    android:id="@+id/wallet_item2"
                    style="@style/WALLET_ITEM"
                    >

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/walllet_tx"
                        />

                    <TextView
                        style="@style/WALLET_TXT"
                        android:text="提现"
                        />

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/into"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black9"
                    />

                <LinearLayout
                    android:id="@+id/wallet_item3"
                    style="@style/WALLET_ITEM"
                    >

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/wallet_yhj"
                        />

                    <TextView
                        style="@style/WALLET_TXT"
                        android:text="优惠劵"
                        />

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/into"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black9"
                    />

                <LinearLayout
                    android:id="@+id/wallet_item4"
                    style="@style/WALLET_ITEM"
                    >

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/wallet_fp"
                        />

                    <TextView
                        style="@style/WALLET_TXT"
                        android:text="发票"
                        />

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/into"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black9"
                    />

                <LinearLayout
                    android:id="@+id/wallet_item5"
                    style="@style/WALLET_ITEM"
                    >

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/wallet_xg"
                        />

                    <TextView
                        style="@style/WALLET_TXT"
                        android:text="修改支付密码"
                        />

                    <ImageView
                        style="@style/WALLET_IMG"
                        android:src="@drawable/into"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</FrameLayout>
