<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="6dp"
    app:cardElevation="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/car_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/car"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长城C30"
                android:textColor="@color/blacke"
                android:textSize="@dimen/ts_14"
                />

            <TextView
                android:id="@+id/car_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/car_name"
                android:text="冀F10010"
                android:textColor="@color/blacke"
                android:textSize="@dimen/ts_14"
                />

                />

            <ProgressBar
                android:id="@+id/car_electricity"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_below="@id/car_name"
                android:layout_marginRight="10dp"

                android:progressDrawable="@drawable/bg_progress"
                android:progress="50"
                android:max="100"
                />

            <TextView
                android:id="@+id/car_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@id/car_name"
                android:layout_toRightOf="@id/car_electricity"
                android:text="续航700km"
                android:textColor="@color/gray10"
                android:textSize="@dimen/ts_10"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>